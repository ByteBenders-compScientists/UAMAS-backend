# Backend Service Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
HOST='0.0.0.0'
PORT=5000
DEBUG=True

# Database Configuration
DB_URI='postgresql://username:password@localhost/uamas_db'
# DB_URI='sqlite:///uamas.db'  # For local testing
TRACK_MODIFICATIONS=False

# Security Keys
JWT_SECRET_KEY='your-jwt-secret-key-change-this'
SECRET_KEY='your-app-secret-key-change-this'

# JWT Cookie Settings
# For HTTP deployment (development/testing without SSL):
# JWT_COOKIE_SECURE=False
# JWT_COOKIE_SAMESITE=Lax
#
# For HTTPS deployment (production with SSL) - RECOMMENDED:
JWT_COOKIE_SECURE=True
JWT_COOKIE_SAMESITE=None

# File Upload Configuration
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
NVIDIA_API_KEY=your-nvidia-api-key
