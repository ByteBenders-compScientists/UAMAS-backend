# Authentication Service Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
HOST='0.0.0.0'
PORT=8000
DEBUG=True

# Database Configuration
DB_URI='postgresql://username:password@localhost/uamas_db'
TRACK_MODIFICATIONS=False

# Security Keys
JWT_SECRET_KEY='your-jwt-secret-key-change-this'
SECRET_KEY='your-app-secret-key-change-this'

# JWT Cookie Settings
# For HTTP deployment (development/testing without SSL):
# JWT_COOKIE_SECURE=False
# JWT_COOKIE_SAMESITE=Lax
#
# For HTTPS deployment (production with SSL) - RECOMMENDED:
JWT_COOKIE_SECURE=True
JWT_COOKIE_SAMESITE=None

# Email Configuration (for account creation and password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_DEBUG=False
