# Nginx Configuration Example for UAMAS Backend
# This configuration should be placed in /etc/nginx/sites-available/
# and symlinked to /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # Replace with your actual domain or IP

    # Redirect HTTP to HTTPS (recommended for production)
    # Uncomment these lines once you have SSL certificates
    # return 301 https://$server_name$request_uri;
# }

# server {
    # listen 443 ssl http2;
    # server_name your-domain.com;  # Replace with your actual domain or IP

    # SSL Configuration
    # ssl_certificate /path/to/your/certificate.crt;
    # ssl_certificate_key /path/to/your/private.key;
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;

    # Increase client body size for file uploads
    client_max_body_size 20M;

    # Proxy settings for cookies and headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    
    # IMPORTANT: Pass through cookie headers
    proxy_pass_header Set-Cookie;
    proxy_cookie_path / /;
    
    # For HTTPS deployments, ensure cookies are marked as secure
    # proxy_cookie_flags ~ secure samesite=none;

    # API Gateway - Main entry point
    location /api/v1/ {
        proxy_pass http://127.0.0.1:8080;
        
        # CORS headers (if not handled by Flask)
        add_header 'Access-Control-Allow-Origin' 'https://intelli-mark-swart.vercel.app' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, Accept' always;
        add_header 'Access-Control-Expose-Headers' 'Content-Type, Authorization, Set-Cookie' always;
        
        # Handle preflight requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' 'https://intelli-mark-swart.vercel.app' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, Accept' always;
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

# Instructions for deployment:
# 1. Copy this file to /etc/nginx/sites-available/uamas-backend
# 2. Update server_name with your domain or server IP
# 3. Create symlink: sudo ln -s /etc/nginx/sites-available/uamas-backend /etc/nginx/sites-enabled/
# 4. Test configuration: sudo nginx -t
# 5. Reload nginx: sudo systemctl reload nginx
#
# For HTTPS (recommended):
# 1. Install certbot: sudo apt install certbot python3-certbot-nginx
# 2. Get SSL certificate: sudo certbot --nginx -d your-domain.com
# 3. Certbot will automatically update this configuration
#
# Environment Variables:
# For HTTP deployment (development/testing), set in .env files:
#   JWT_COOKIE_SECURE=False
#   JWT_COOKIE_SAMESITE=Lax
#
# For HTTPS deployment (production), set in .env files:
#   JWT_COOKIE_SECURE=True
#   JWT_COOKIE_SAMESITE=None
